<h6>Dashboard</h6>
<h1>Welcome {{name}}</h1>
<p>Here are your entries</p>
{{#if entries}}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Category</th>
                <th>Visibility</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each entries}}
            <tr>
                <td><a href="/entries/{{_id}}">{{title}}</a></td>
                <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
                <td><span class="dash-status">{{category}}</span></td>
                <td>{{visibility}}</td>
                <td>
                    <a href="/entries/edit/{{_id}}" class="btn btn-float"><i class="fas fa-edit"></i></a>

                    <form action="/entries/{{_id}}" method="POST" id="delete-form">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn red">
                            <i class="fas fa-trash"></i>
                        </button>
                    </form>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>

{{else}}
    <p>You have not created any entries</p>
    {{/if}}
